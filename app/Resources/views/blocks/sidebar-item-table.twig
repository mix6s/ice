<div class="sidebar-table__item">
    <div class="sidebar-table__header">{{ league.metadata.title }}</div>
    <table class="table table--sidebar">
        <tr>
            <th>№</th>
            <th>Команда</th>
            <th>И</th>
            <th>В</th>
            <th>О</th>
        </tr>
        {% for num,stat in teams %}
        <tr>
            <td>{{ num+1 }}</td>
            <td><a href="{{ url('team.index', {id: stat.seasonteam.team.id}) }}">{{ stat.seasonteam.team.metadata.title }}</a></td>
            <td>{{ stat.gamesCount }}</td>
            <td>{{ stat.winInMain }}</td>
            <td>{{ stat.scores }}</td>
        </tr>
        {% endfor %}
    </table>
</div>
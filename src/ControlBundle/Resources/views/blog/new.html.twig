{% extends '@Control/layout.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block head %}
    {{ parent() }}
    <link href="{{ asset('bower_components/summernote/dist/summernote.css') }}" rel="stylesheet">
    <script src="{{ asset('bower_components/summernote/dist/summernote.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-5 col-md-offset-2">
            {{ form_start(form) }}
            {{ form_row(form.postedAt) }}
            {{ form_row(form.title) }}
            <div id="yo">
                {{ form_row(form.description) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <script>
        $(document).ready(function() {
            $('#blogbundle_post_description').summernote();
        });
    </script>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}